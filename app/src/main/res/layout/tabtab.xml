<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@android:id/tabhost">

    <LinearLayout
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:orientation="vertical">
        <TabWidget
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@android:id/tabs"> </TabWidget>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@android:id/tabcontent">
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tab1" android:orientation="vertical"
                android:columnCount="5" android:rowCount="9">

                <EditText
                    android:layout_column="0" android:layout_row="0"
                    android:layout_columnSpan="5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/edit_text_1"
                    android:hint="Number 1"/>
                <EditText
                    android:layout_column="0" android:layout_row="1"
                    android:layout_columnSpan="5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/edit_text_2"
                    android:hint="Number 2"/>
                <Button
                    android:layout_column="0" android:layout_row="2"
                    android:id="@+id/num0" android:text="0" />
                <Button
                    android:layout_column="1" android:layout_row="2"
                    android:id="@+id/num1" android:text="1" />
                <Button
                    android:layout_column="2" android:layout_row="2"
                    android:id="@+id/num2" android:text="2" />
                <Button
                    android:layout_column="3" android:layout_row="2"
                    android:id="@+id/num3" android:text="3" />
                <Button
                    android:layout_column="4" android:layout_row="2"
                    android:id="@+id/num4" android:text="4" />
                <Button        android:layout_column="0" android:layout_row="3"
                    android:id="@+id/num5" android:text="5" />
                <Button
                    android:layout_column="1" android:layout_row="3"
                    android:id="@+id/num6" android:text="6" />
                <Button
                    android:layout_column="2" android:layout_row="3"
                    android:id="@+id/num7" android:text="7" />
                <Button
                    android:layout_column="3" android:layout_row="3"
                    android:id="@+id/num8" android:text="8" />
                <Button
                    android:layout_column="4" android:layout_row="3"
                    android:id="@+id/num9" android:text="9" />
                <Button
                    android:layout_column="0" android:layout_row="4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_columnSpan="5" android:id="@+id/button_Add" android:text="Add"/>

                <Button
                    android:layout_column="0" android:layout_row="5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_columnSpan="5" android:id="@+id/button_Subtract" android:text="Subtract"/>

                <Button
                    android:layout_column="0" android:layout_row="6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_columnSpan="5" android:id="@+id/button_Multiple" android:text="Multiple"/>
                <Button
                    android:layout_column="0" android:layout_row="7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_columnSpan="5" android:id="@+id/button_Divide" android:text="Divide"/>
                <TextView android:layout_column="0" android:layout_row="8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_columnSpan="5" android:id="@+id/textResult" android:text="Result:"  />


            </GridLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tab2" android:orientation="vertical">
                <TextView
                    android:id="@+id/text_view_1"
                    android:text="Do you want to start an activity?"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <CheckBox
                    android:id="@+id/check_box_1"
                    android:text="Yes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/text_view_2"
                    android:text="Select a name in the list below."
                    android:visibility="invisible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <RadioGroup
                    android:id="@+id/radio_group_1"
                    android:visibility="invisible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RadioButton
                        android:id="@+id/radio_button_1"
                        android:text="Image 1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <RadioButton
                        android:id="@+id/radio_button_2"
                        android:text="Image 2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <RadioButton
                        android:id="@+id/radio_button_3"
                        android:text="Image 3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <RadioButton
                        android:id="@+id/radio_button_4"
                        android:text="Image 4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <RadioButton
                        android:id="@+id/radio_button_5"
                        android:text="Image 5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </RadioGroup>
                <Button
                    android:id="@+id/button_1"
                    android:text="OK"
                    android:visibility="invisible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:id="@+id/imageView_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"/>

            </LinearLayout>





        </FrameLayout>



    </LinearLayout>




</TabHost>
